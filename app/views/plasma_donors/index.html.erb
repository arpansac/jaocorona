<p id="notice"><%= notice %></p>

<h1>Plasma Donors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Alternate phone</th>
      <th>Blood group</th>
      <th>City</th>
      <th>Pincode</th>
      <th>Last verified at</th>
      <th>Unavailable</th>
      <th>Fake</th>
      <th>Old</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plasma_donors.each do |plasma_donor| %>
      <tr>
        <td><%= plasma_donor.name %></td>
        <td><%= plasma_donor.phone %></td>
        <td><%= plasma_donor.alternate_phone %></td>
        <td><%= plasma_donor.blood_group %></td>
        <td><%= plasma_donor.city_id %></td>
        <td><%= plasma_donor.pincode %></td>
        <td><%= plasma_donor.last_verified_at %></td>
        <td><%= plasma_donor.unavailable %></td>
        <td><%= plasma_donor.fake %></td>
        <td><%= plasma_donor.old %></td>
        <td><%= plasma_donor.deleted_at %></td>
        <td><%= link_to 'Show', plasma_donor %></td>
        <td><%= link_to 'Edit', edit_plasma_donor_path(plasma_donor) %></td>
        <td><%= link_to 'Destroy', plasma_donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

